# Production Environment Variables for Hokusai API

# MLflow Configuration
MLFLOW_SERVER_URL=https://registry.hokus.ai/mlflow
MLFLOW_TRACKING_URI=https://registry.hokus.ai/mlflow

# Authentication Service
HOKUSAI_AUTH_SERVICE_URL=https://auth.hokus.ai
AUTH_SERVICE_TIMEOUT=5.0

# Redis Cache (optional but recommended)
REDIS_URL=redis://redis:6379/0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8001

# Database
POSTGRES_URI=postgresql://mlflow:mlflow_password@postgres/mlflow_db

# Logging
LOG_LEVEL=INFO

# CORS
CORS_ORIGINS=["*"]

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60